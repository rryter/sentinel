{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Uploader",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "remotePath": "/app",
      "port": 2345,
      "host": "127.0.0.1",
      "showLog": true,
      "apiVersion": 2,
      "trace": "verbose"
    },
    {
      "name": "Attach to Indexer",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "remotePath": "/app",
      "port": 2346,
      "host": "127.0.0.1",
      "showLog": true,
      "apiVersion": 2,
      "trace": "verbose"
    },
    {
      "name": "Launch Go (Analysis Service)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/sentinel-analysis/cmd/uploader/main.go",
      "env": {
        "GO_ENV": "development",
        "TARGET_DIR": "/target"
      },
      "args": [],
      "showLog": true
    },
    {
      "name": "Connect to Uploader",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "remotePath": "/app/cmd/uploader",
      "port": 2345,
      "host": "127.0.0.1"
    },
    {
      "type": "rdbg",
      "request": "attach",
      "name": "Attach to Sidekiq",
      "host": "sidekiq",
      "port": 1235,
      "remoteWorkspaceRoot": "/app"
    }
  ]
}
