{
  "rules": {
    "no-console-warn-visitor": "error",
    "angular-legacy-decorators": "warn",
    "angular-input-count": ["error", { "maxInputs": 2 }],
    "angular-component-class-suffix": ["error", {
      "suffixes": ["Component", "Page", "View"] 
    }],
    "angular-component-max-inline-declarations": [
      "error",
      {
        "template": 3,
        "styles": 3,
        "animations": 15
      }
    ],
    "angular-obsolete-standalone-true": "error",
    "typescript-non-null-assertion": ["error", {
      "skipInTests": true
    }],
    "typescript-type-assertion": ["error"]
  }
} 