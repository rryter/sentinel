{
  "openapi": "3.0.1",
  "info": {
    "title": "Sentinel API",
    "version": "v1",
    "description": "Sentinel API endpoints"
  },
  "paths": {
    "/api/v1/examples": {
      "get": {
        "summary": "Lists all examples",
        "tags": [
          "Examples"
        ],
        "responses": {
          "200": {
            "description": "examples found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer"
                      },
                      "name": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "id",
                      "name",
                      "description"
                    ]
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Creates an example",
        "tags": [
          "Examples"
        ],
        "parameters": [],
        "responses": {
          "201": {
            "description": "example created"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "required": [
                  "name",
                  "description"
                ]
              }
            }
          }
        }
      }
    },
    "/api/v1/examples/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": {
            "type": "integer"
          }
        }
      ],
      "get": {
        "summary": "Retrieves an example",
        "tags": [
          "Examples"
        ],
        "responses": {
          "200": {
            "description": "example found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer"
                    },
                    "name": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "id",
                    "name",
                    "description"
                  ]
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Updates an example",
        "tags": [
          "Examples"
        ],
        "parameters": [],
        "responses": {
          "200": {
            "description": "example updated"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "required": [
                  "name",
                  "description"
                ]
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Deletes an example",
        "tags": [
          "Examples"
        ],
        "responses": {
          "200": {
            "description": "example deleted",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "message"
                  ]
                }
              }
            }
          }
        }
      }
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Development server"
    },
    {
      "url": "https://api.sentinel.example.com",
      "description": "Production server"
    }
  ],
  "components": {
    "schemas": {
      "Example": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "name",
          "description"
        ]
      }
    }
  }
}